@model Product
@{
}

<h3>Add Product</h3>

<a href="/Product/DisplayAll" class="my-2 btn btn-primary ">Display All</a>

<form asp-action="Add">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" type="text" placeholder="Enter Name" class="form-control">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>    
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" type="text" placeholder="Enter Price" class="form-control">
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Image" class="form-label">Image</label>
        <input asp-for="Image" type="text" placeholder="Enter Image Url" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" placeholder="Enter Description"  class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>

    @if(TempData["msg"] != null)
    {
        <div id="tempDataMessage" class="mb-3 ">
            <span class="text-success">@TempData["msg"]</span>
        </div>
    }


    <div class="mb-3">
        <button type="submit" class="btn btn-primary ">Save</button>
    </div>

</form>

<script>
    setTimeout(function () {
        var tempDataMessage = document.getElementById('tempDataMessage');
        tempDataMessage.style.display = 'none';
    }, 2000);
</script>

